<EditForm Model="@applicant" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary/>
   
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@applicant.Name" class="form-control" />
                <ValidationMessage For="@(() => applicant.Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>Contact Number: </label>
            <div>
                <InputText @bind-Value="@applicant.ContactNumber" class="form-control" />
                <ValidationMessage For="@(() => applicant.ContactNumber)" />
            </div>
        </div>
    </fieldset>

    @if(!Disabled)
    {
        <button type="submit" class="btn btn-sucess btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target ="applicants" />
</EditForm>

@*@if (!Disabled)
