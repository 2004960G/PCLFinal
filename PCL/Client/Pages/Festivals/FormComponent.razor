<EditForm Model="@festival" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary/>
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@festival.Name" class="form-control" />
                <ValidationMessage For="@(() => festival.Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>Description: </label>
            <div>
                <InputText @bind-Value="@festival.Description" class="form-control" />
                <ValidationMessage For="@(() => festival.Description)" />
            </div>
        </div>

    </fieldset>

    @if(!Disabled)
    {
        <button type="submit" class="btn btn-sucess btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target ="festivals" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Festival festival { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set;}
}